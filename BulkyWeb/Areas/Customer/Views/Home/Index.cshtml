@model IEnumerable<Product>

<div class="row pb-3 mb-5">
	@foreach (var Product in Model)
	{
		<div class="col-lg-3 col-sm-6">
			<div class="row p-2">
				<div class="col-12 p-1">
					<div class="card border-0 p3 shadow border-top border-5 rounded">
						<img src="@Product.ImageUrl" class="card-img-top rounded"/>
						<div class="card-body pb-0">
							<div class="pl-1">
								<p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@Product.Title</p>
								<p class="card-title text-warning text-center">by <b>@Product.Author</b></p>
							</div>
							<div class="pl-1">
								<p class="card-title h5 text-dark text-opacity-75 text-center">
									List price:
									<span class="text-decoration-line-through mb-0">@Product.ListPrice.ToString("c")</span>
								</p>
							</div>
							<div class="pl-1">
								<p class="card-title h5 text-dark text-opacity-75 text-center">
									<b>As low as:</b>
									<span>@Product.Price100.ToString("c")</span>
								</p>
							</div>
							<div>
								<a asp-action="Details" asp-route-id="@Product.Id" class="btn btn-primary bg-gradient border 0 form-control mb-1">
									Details
								</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div> 
	}
</div>